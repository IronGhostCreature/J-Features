<UserControl x:Class="J.windows.Features.WorkAreaContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:J.windows.Features"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
        <telerik:RadTabControl VerticalAlignment="Top"
				DisplayMemberPath="Content" DropDownDisplayMode="Visible" ScrollMode="Viewport" 
                               BorderThickness="0"
                               TabStripPlacement="Left"
                               >
            <telerik:RadTabItem DropDownContent="A - D" Header="A - D" >    
                
                </telerik:RadTabItem>
            </telerik:RadTabControl>
    
</UserControl>
